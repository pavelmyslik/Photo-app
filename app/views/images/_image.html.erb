<div id="<%= dom_id image %>">
  <p>
    <strong>Name:</strong>
    <%= image.name %>
  </p>

  <p>
    <strong>Picture:</strong>
    <%= image.picture? ? image_tag(image.picture.url, size: "250x250") : "No image uploaded"%>
  </p>

  <p>
    <strong>User:</strong>
    <%= image.user.email %>
  </p>

</div>
